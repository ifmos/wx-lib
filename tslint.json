{
  "extends": ["tslint:latest", "tslint-config-standard", "tslint-config-prettier"],
  "rules": {
    "no-floating-promises": false,
    "member-access": false,
    "trailing-comma": {
      "options": {
        "singleline": "never",
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    }
  },
  "linterOptions": {
    "exclude": ["tools"]
  }
}
